<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.Home"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/main_toolbar"/>
    <ScrollView
            android:layout_marginTop="?actionBarSize"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.anandaikhsan.centinews.compound.HeadlineView android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              app:layout_constraintTop_toTopOf="parent"
                                                              app:layout_constraintVertical_weight="1"
                                                              app:layout_constraintLeft_toLeftOf="parent"
                                                              android:layout_margin="10dp"
                                                              android:orientation="vertical"
                                                              android:id="@+id/generalHeadline"
                                                              app:layout_constraintRight_toRightOf="parent"/>

            <com.anandaikhsan.centinews.compound.HeadlineView android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              app:layout_constraintTop_toBottomOf="@id/generalHeadline"
                                                              app:layout_constraintVertical_weight="1"
                                                              app:layout_constraintLeft_toLeftOf="parent"
                                                              android:layout_margin="10dp"
                                                              android:orientation="vertical"
                                                              android:id="@+id/healthHeadline"
                                                              app:layout_constraintRight_toRightOf="parent"/>

            <com.anandaikhsan.centinews.compound.HeadlineView android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              app:layout_constraintTop_toBottomOf="@id/healthHeadline"
                                                              app:layout_constraintVertical_weight="1"
                                                              app:layout_constraintLeft_toLeftOf="parent"
                                                              android:layout_margin="10dp"
                                                              android:orientation="vertical"
                                                              android:id="@+id/technologyHeadline"
                                                              app:layout_constraintRight_toRightOf="parent"/>
            <com.anandaikhsan.centinews.compound.HeadlineView android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              app:layout_constraintTop_toBottomOf="@id/technologyHeadline"
                                                              app:layout_constraintVertical_weight="1"
                                                              app:layout_constraintLeft_toLeftOf="parent"
                                                              android:layout_margin="10dp"
                                                              android:orientation="vertical"
                                                              android:id="@+id/businessHeadline"
                                                              app:layout_constraintRight_toRightOf="parent"/>
            <com.anandaikhsan.centinews.compound.HeadlineView android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              app:layout_constraintTop_toBottomOf="@id/businessHeadline"
                                                              app:layout_constraintVertical_weight="1"
                                                              app:layout_constraintLeft_toLeftOf="parent"
                                                              android:layout_margin="10dp"
                                                              android:orientation="vertical"
                                                              android:id="@+id/entertainmentHeadline"
                                                              app:layout_constraintRight_toRightOf="parent"/>
            <com.anandaikhsan.centinews.compound.HeadlineView android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              app:layout_constraintTop_toBottomOf="@id/entertainmentHeadline"
                                                              app:layout_constraintVertical_weight="1"
                                                              app:layout_constraintLeft_toLeftOf="parent"
                                                              android:layout_margin="10dp"
                                                              android:orientation="vertical"
                                                              android:id="@+id/scienceHeadline"
                                                              app:layout_constraintRight_toRightOf="parent"/>
            <com.anandaikhsan.centinews.compound.HeadlineView android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              app:layout_constraintTop_toBottomOf="@id/scienceHeadline"
                                                              app:layout_constraintVertical_weight="1"
                                                              app:layout_constraintLeft_toLeftOf="parent"
                                                              android:layout_margin="10dp"
                                                              android:orientation="vertical"
                                                              android:id="@+id/sportsHeadline"
                                                              app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>